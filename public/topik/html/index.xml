gt;&lt;/span&gt;&#xA;&lt;/span&gt;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;&lt;p&gt;Hsilnya memang akan terlihat seperti ini:&lt;/p&gt;&#xA;&#xD;&#xA;  &lt;figure class=&#34;my-4 text-center&#34;&gt;&#xD;&#xA;    &lt;img &#xD;&#xA;      src=&#34;http://localhost:1313/images/content/tutorial/html/list-paragraf.png&#34; &#xD;&#xA;      alt=&#34;Deskripsi gambar&#34; &#xD;&#xA;      class=&#34;mx-auto cursor-zoom-in max-w-full rounded&#34;&#xD;&#xA;      onclick=&#34;zoom(this)&#34;&#xD;&#xA;    &gt;&#xD;&#xA;    &#xD;&#xA;  &lt;/figure&gt;&#xD;&#xA;  &#xD;&#xA;  &lt;script&gt;&#xD;&#xA;  function zoom(img) {&#xD;&#xA;    const isZoomed = img.classList.toggle(&#39;zoomed&#39;);&#xD;&#xA;    &#xD;&#xA;    if (isZoomed) {&#xD;&#xA;      &#xD;&#xA;      const scale = Math.min(&#xD;&#xA;        window.innerWidth * 0.9 / img.naturalWidth,&#xD;&#xA;        window.innerHeight * 0.9 / img.naturalHeight,&#xD;&#xA;        1.0 &#xD;&#xA;      );&#xD;&#xA;      &#xD;&#xA;      img.style.setProperty(&#39;--zoom-scale&#39;, scale);&#xD;&#xA;      document.body.style.overflow = &#39;hidden&#39;;&#xD;&#xA;      &#xD;&#xA;      &#xD;&#xA;      const handleKey = (e) =&gt; e.key === &#39;Escape&#39; &amp;&amp; zoom(img);&#xD;&#xA;      document.addEventListener(&#39;keydown&#39;, handleKey);&#xD;&#xA;      img.dataset.escHandler = handleKey;&#xD;&#xA;    } else {&#xD;&#xA;      document.body.style.overflow = &#39;&#39;;&#xD;&#xA;      document.removeEventListener(&#39;keydown&#39;, img.dataset.escHandler);&#xD;&#xA;    }&#xD;&#xA;  }&#xD;&#xA;  &lt;/script&gt;&#xD;&#xA;  &#xD;&#xA;  &lt;style&gt;&#xD;&#xA;  img.zoomed {&#xD;&#xA;    position: fixed;&#xD;&#xA;    top: 50%;&#xD;&#xA;    left: 50%;&#xD;&#xA;    transform: translate(-50%, -50%) scale(var(--zoom-scale, 0.9));&#xD;&#xA;    max-width: 90vw;&#xD;&#xA;    max-height: 90vh;&#xD;&#xA;    z-index: 1000;&#xD;&#xA;    cursor: zoom-out;&#xD;&#xA;    background: white;&#xD;&#xA;    padding: 1rem;&#xD;&#xA;    box-shadow: 0 0 0 100vmax rgba(0,0,0,0.8);&#xD;&#xA;    object-fit: contain;&#xD;&#xA;  }&#xD;&#xA;  &#xD;&#xA;   &#xD;&#xA;  body.overflow-hidden {&#xD;&#xA;    overflow: hidden !important;&#xD;&#xA;  }&#xD;&#xA;  &lt;/style&gt;&#xA;&lt;p&gt;Tapi, ini bukalan cara membuat list yang benar di HTML.&lt;/p&gt;</description>
    </item>
    <item>
